<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="title"
            type="String" />

        <variable
            name="desc"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/loyaltyProgramTemplateIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@{icon}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/loyaltyProgramTemplateTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/manrope_semi_bold"
            android:gravity="start"
            android:singleLine="true"
            android:text="@{title}"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/loyaltyProgramTemplateDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/loyaltyProgramTemplateIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/loyaltyProgramTemplateDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="start"
            android:singleLine="true"
            android:text="@{title}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/loyaltyProgramTemplateIcon"
            app:layout_constraintTop_toBottomOf="@id/loyaltyProgramTemplateTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>