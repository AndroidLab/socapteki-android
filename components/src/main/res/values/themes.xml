<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Socapteki" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_variant</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryFixedVariant">@color/red</item>
        <item name="colorSurfaceVariant">@color/color_surface_variant</item>

        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/grey</item>-->
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="colorOnSecondary">@color/dark_black</item>
        <item name="colorSecondaryContainer">@color/color_secondary_container</item>
        <item name="fontFamily">@font/manrope_regular</item>
    </style>

    <style name="Theme.Socapteki" parent="Base.Theme.Socapteki" />

    <style name="Theme.Socapteki.ProgressBar" parent="Theme.MaterialComponents.DayNight">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminateTint">@color/color_primary</item>
    </style>

    <style name="Theme.Socapteki.Price" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Socapteki.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@drawable/outline_button_selector</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Theme.Socapteki.BackgroundCard" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/base_corner_radius</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Theme.Socapteki.BackgroundCardCornerBottom" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="shapeAppearanceOverlay">
            @style/Theme.Socapteki.ShapeAppearanceBottomCorner
        </item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Theme.Socapteki.ShapeAppearanceBottomCorner" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/base_corner_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/base_corner_radius</item>
    </style>

    <style name="Theme.Socapteki.HeaderBase" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_black</item>
        <!--<item name="fontFamily">@font/montserrat</item>-->
    </style>

    <style name="Theme.Socapteki.HeaderH4" parent="Theme.Socapteki.HeaderBase">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/CustomTextInputLayoutThemeOverlay</item>
        <item name="shapeAppearanceOverlay">
            @style/CustomTextInputLayoutShapeAppearanceOverlay
        </item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:textColorHint">@color/color_text_hint</item>
        <item name="startIconTint">@color/color_icon_hint</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="TextInputLayoutDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">true</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textColorHint">@color/color_text_hint</item>

    </style>

    <style name="CustomTextInputLayoutThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/CustomTextInputLayoutEditTextStyle</item>
    </style>

    <style name="CustomTextInputLayoutEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="CustomTextInputLayoutShapeAppearanceOverlay" parent="">
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="Theme.Socapteki.DataPicker" parent="Theme.Material3.Light.Dialog">
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DataPicker.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DataPicker.Button.Negative</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DataPicker.Button.Neutral</item>
    </style>

    <style name="Theme.Socapteki.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="colorAccent">@color/color_primary</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="DataPicker.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="DataPicker.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="DataPicker.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="Theme.Socapteki.BottomSheetMenu" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
        <item name="contentPadding">0dp</item>
        <item name="shapeAppearanceOverlay">@style/Theme.Socapteki.BottomSheetMenu.Cut</item>
    </style>

    <style name="Theme.Socapteki.BottomSheetMenu.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
    </style>

    <style name="Theme.Socapteki.SemiBold">
        <item name="fontFamily">@font/manrope_semi_bold</item>
        <item name="android:fontFamily">@font/manrope_semi_bold</item>
    </style>

    <style name="Theme.Socapteki.ManropeMedium">
        <item name="fontFamily">@font/manrope_medium</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
    </style>

    <style name="Theme.Socapteki.CollapsingToolbar.Expanded" parent="Theme.Socapteki.ManropeMedium">
        <item name="android:textSize">16sp</item>
    </style>

</resources>