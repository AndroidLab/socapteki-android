<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Параметры для  PinCode -->
    <declare-styleable name="PinCodeView">

        <attr name="cellsCount" format="integer" />
        <attr name="cellSize" format="dimension" />
        <attr name="cellBorderSize" format="dimension" />
        <attr name="cellGapSize" format="dimension" />
        <attr name="cellCornerRadius" format="dimension" />
        <attr name="cellBackgroundColor" format="color" />
        <attr name="cellBackgroundFocusColor" format="color" />
        <attr name="cellBackgroundSuccessColor" format="color" />
        <attr name="cellBackgroundErrorColor" format="color" />
        <attr name="cellBorderColor" format="color" />
        <attr name="cellBorderFocusColor" format="color" />
        <attr name="cellBorderSuccessColor" format="color" />
        <attr name="cellBorderErrorColor" format="color" />
        <attr name="cellTextColor" format="color" />

    </declare-styleable>

    <!-- Параметры для TextInputLayout -->
    <declare-styleable name="TextInputLayout">
        <attr name="textInputLayoutFocusedDrawable" format="reference" />
        <attr name="textInputLayoutUnfocusedDrawable" format="reference" />
        <attr name="textInputLayoutDisabledDrawable" format="reference" />
        <attr name="textInputLayoutErrorDrawable" format="reference" />
    </declare-styleable>

    <!-- Параметры для BouncyNestedScrollView -->
    <declare-styleable name="BouncyNestedScrollView">
        <attr name="overscrollAnimationSize" format="float" />
        <attr name="flingAnimationSize" format="float" />
        <!-- Отскакивает туда сюда -->
        <attr name="bouncyScrollviewDampingRatio" format="integer">
            <enum name="DAMPING_RATIO_NO_BOUNCY" value="0" />
            <enum name="DAMPING_RATIO_LOW_BOUNCY" value="1" />
            <enum name="DAMPING_RATIO_MEDIUM_BOUNCY" value="2" />
            <enum name="DAMPING_RATIO_HIGH_BOUNCY" value="3" />
        </attr>
        <!-- Скорость обратного возврата -->
        <attr name="bouncyScrollviewStiffness" format="integer">
            <enum name="STIFFNESS_VERY_LOW" value="0" />
            <enum name="STIFFNESS_LOW" value="1" />
            <enum name="STIFFNESS_MEDIUM" value="2" />
            <enum name="STIFFNESS_HIGH" value="3" />
        </attr>

        <attr name="bouncyScrollviewOverscrollMode" format="integer">
            <enum name="OVERSCROLL_ALL" value="0" />
            <enum name="OVERSCROLL_START" value="1" />
            <enum name="OVERSCROLL_END" value="2" />
        </attr>
    </declare-styleable>

    <!-- Параметры для BouncyRecyclerScrollView -->
    <declare-styleable name="BouncyRecyclerView">
        <attr name="recyclerviewOverscrollStartAnimationSize" format="float" />
        <attr name="recyclerviewOverscrollEndAnimationSize" format="float" />
        <attr name="recyclerview_fling_animation_size" format="float" />

        <attr name="allowDragReorder" format="boolean" />
        <attr name="allowItemSwipe" format="boolean" />
        <!-- Отскакивает туда сюда -->
        <attr name="bouncyRecyclerviewDampingRatio" format="integer">
            <enum name="DAMPING_RATIO_NO_BOUNCY" value="0" />
            <enum name="DAMPING_RATIO_LOW_BOUNCY" value="1" />
            <enum name="DAMPING_RATIO_MEDIUM_BOUNCY" value="2" />
            <enum name="DAMPING_RATIO_HIGH_BOUNCY" value="3" />
        </attr>
        <!-- Скорость обратного возврата -->
        <attr name="bouncyRecyclerviewStiffness" format="integer">
            <enum name="STIFFNESS_VERY_LOW" value="0" />
            <enum name="STIFFNESS_LOW" value="1" />
            <enum name="STIFFNESS_MEDIUM" value="2" />
            <enum name="STIFFNESS_HIGH" value="3" />
        </attr>
        <attr name="bouncyRecyclerviewOverscrollMode" format="integer">
            <enum name="OVERSCROLL_NEVER" value="-1" />
            <enum name="OVERSCROLL_ALL" value="0" />
            <enum name="OVERSCROLL_START" value="1" />
            <enum name="OVERSCROLL_END" value="2" />
        </attr>
        <attr name="bouncyRecyclerviewOverscrollType" format="integer">
            <enum name="OVERSCROLL_TRANSLATION" value="0" />
            <enum name="OVERSCROLL_PADDING" value="1" />
        </attr>
    </declare-styleable>

    <!-- Параметры для LoaderLayout -->
    <declare-styleable name="LoaderLayout">
        <attr name="hideContent" format="boolean" />
    </declare-styleable>

    <!-- Параметры для SeekBar -->
    <declare-styleable name="SeekBarRangedView">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="currentMin" format="integer" />
        <attr name="currentMax" format="integer" />
        <attr name="rounded" format="boolean" />
        <attr name="backgroundColor" format="color" />
        <attr name="backgroundHeight" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="progressHeight" format="dimension" />
        <attr name="thumbsResource" format="reference" />
        <attr name="thumbNormalResource" format="reference" />
        <attr name="thumbPressedResource" format="reference" />
    </declare-styleable>

    <!-- Параметры для NotificationBadge -->
    <declare-styleable name="NotificationBadge">
        <attr name="android:textColor" />
        <attr name="nbBackground" format="reference" />
        <attr name="nbAnimationDuration" format="integer" />
        <attr name="nbCountLimit" format="integer" />
        <attr name="nbEllipsizeText" format="string" />
    </declare-styleable>

</resources>