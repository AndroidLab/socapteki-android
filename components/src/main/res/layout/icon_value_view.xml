<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.apteka.components.data.utils.ExtensionsMethodsKt" />

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="value"
            type="String" />

        <variable
            name="iconBackgroundTint"
            type="Integer" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_circle"
            android:scaleType="fitXY"
            android:src="@{icon}"
            app:extraBackgroundTint="@{iconBackgroundTint}"
            app:extraPadding="@{iconBackgroundTint == null ? 0 : 5}"
            app:extra_layout_height="@{iconBackgroundTint == null ? 20 : 30}"
            app:extra_layout_width="@{iconBackgroundTint == null ? 20 : 30}"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{value}" />

    </LinearLayout>


</layout>